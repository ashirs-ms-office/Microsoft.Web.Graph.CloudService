@model Microsoft.Web.Graph.WebRole.ViewModels.GettingStarted.Partials.PickPlatformPartialViewModel
<script>
        window.platformData = @Html.Raw(Json.Encode(Model.Platforms));
</script>
<div class="card" id="setup" name="3. Pick platform" isblocking="true">
    <h1>@Model.Title</h1>
    <p>@Model.Description</p>
    <div id="pickPlatform">
        <div class="tabs">
            @{
                foreach (var platform in Model.Platforms)
                {
                    <button id="@platform.Id" class="col-xs-12 col-sm-4 platformOptionBlock">
                        <img src="@platform.Icon" alt="@platform.Alt" /><br />
                        <span>@platform.Name</span>
                    </button>
                }
            }
        </div>
        <div style="clear:both;"></div>
    </div>

    <div id="pickPlatformDisableDiv" hidden class="yellowNote">
        <p><strong>Note: </strong> You can not change the platform once an app has been registered. To change the platform, please <a onclick="window.location.href = window.location.href.split('?')[0];">click here</a> to start over.</p>
    </div>
</div>

<div class="card-question" id="SetupPlatform" style="display:none">
    <div id="ShowDocumentationDiv">
    </div>
</div>

<div class="card" id="register-app" name="4. Setup & Register" isblocking="false">
    <div class="ms-Grid-row">
        <div id="app-reg-title"></div>      
        <div id="app-reg-desc"class="ms-Grid-col ms-u-sm12"></div>
    </div>
    <div id="app-reg-notes" class="yellowNote"></div>
    <div class="col-sm-2" style="padding:0">
        <button class="button responsive-btn" value="let's go'" id="go-reg-app">
            @Model.LetsGo&nbsp;&nbsp;
            <span class="icon_seemore"></span>
        </button>
    </div>
</div>

<div class="card-question" id="registration-successful" style="display:none">
    <div class=""><h1>Registration Successful!</h1></div>
    <div id="app-info-box">
        <p id="registeredText">Thanks for registering your app. By the way, we also set the Redirect URI on your behalf so it can work with our code sample.</p>
        <br />
        <div id="registered-form">
            <form role="form">
                <div class="form-group" id="appIdFieldGroup">
                    <label id="appIdLabel" title="The auto-generated app ID.">App ID <i class="fa fa-question-circle"></i> :</label> @*TODO add label to registerApp.js*@
                    <input readonly id="appIdField" class="form-control" type="text" name="appId" value="FILLER" /> @*TODO: dynamically add value = app id from querystring*@
                </div>
                <div class="form-group" id="redirectUriFieldGroup">
                    <label id="redirectUriLabel" class="" title="The URI to which we will redirect in response to an OAuth 2.0 request." for="redirectUri">Redirect URI <i class="fa fa-question-circle"></i> :</label>
                    <input readonly id="redirectUriField" class="form-control" type="text" name="redirectUri" value="FILLER2" /> @*TODO: add redirect from querystring. was value="@Model.redirectUri" *@
                    <div id="redirect-uri-error-div" class="ms-font-color-error ms-font-l"></div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card" id="setup-project" name="5. Code">
    <div class=""><h1>Start coding</h1></div>
    <div id="use-starter-project">
        <p id="downloadText">Download our code sample to get going. This sample will introduce you to authentication and send an email from your acccount.</p>
        <br />

        <div id="registration-form">
            <form role="form">
                <div id="app-secret-prompt">
                    <p>Please re-enter the App Secret that you generated and saved:</p>
                    <div class="form-group" id="appPasswordFieldGroup">
                        @*<label id="appPasswordLabel" class="" title="The password associated with the App ID." for="appPassword">App Password <i class="fa fa-question-circle"></i> :</label>*@
                        <input id="appPasswordField" class="form-control" type="text" name="appId" placeholder="<App Secret Here>" />
                        <div id="redirect-uri-error-div" class="ms-font-color-error ms-font-l"></div>
                    </div>
                </div>
                <button class="download-button" type="button" value="Download starter project" id="downloadCodeSampleButtonSdk" onclick="registerAppParams.clientSecret = $('#appPasswordField').val(); codeSamplePackageAndDownload(getPlatformInfo(platformId).CodeSample[0].Repo, registerAppParams.clientId, registerAppParams.clientSecret, registerAppParams.redirectUri, registerAppParams.signonUri, true); setAllSetDiv();">
                    Download the SDK based code sample&nbsp;&nbsp;
                    @*<img class="img-white-foreground" src=@Microsoft.Web.Portal.Common.Environment.GetMediaUrl("/media/Default/GettingStarted/devOffice_getting_started_downloadarrow_22x22.png") alt="download" />*@
                </button>
                <button class="download-button" type="button" value="Download starter project" id="downloadCodeSampleButtonRest" onclick="registerAppParams.clientSecret = $('#appPasswordField').val(); codeSamplePackageAndDownload(getPlatformInfo(platformId).CodeSample[1].Repo, registerAppParams.clientId, registerAppParams.clientSecret, registerAppParams.redirectUri, registerAppParams.signonUri, false); setAllSetDiv();">
                    Download the REST based code sample&nbsp;&nbsp;
                    @*<img class="img-white-foreground" src=@Microsoft.Web.Portal.Common.Environment.GetMediaUrl("/media/Default/GettingStarted/devOffice_getting_started_downloadarrow_22x22.png") alt="download" />*@
                </button>
            </form>
        </div>



    </div>
    <div id="write-code-from-scratch" hidden></div>
    <div id="suggestionlistId" hidden></div>
    <div id="post-download-instructions" hidden class="note"></div>
</div>