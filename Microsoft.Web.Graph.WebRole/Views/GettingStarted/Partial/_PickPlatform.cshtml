@model Microsoft.Web.Graph.WebRole.ViewModels.GettingStarted.Partials.PickPlatformPartialViewModel
<script>
        window.platformData = @Html.Raw(Json.Encode(Model.Platforms));
</script>
<div class="card" id="setup" name="3. Pick platform" isblocking="true">
    <h1>@Model.Title</h1>
    <p>@Model.Description</p>
    <div id="pickPlatform">
        <div class="tabs">
            @{
                foreach (var platform in Model.Platforms)
                {
                    <button id="@platform.Id" class="col-xs-12 col-sm-4 platformOptionBlock">
                        <img src="@platform.Icon" alt="@platform.Alt" /><br />
                        <span>@platform.Name</span>
                    </button>
                }
            }
        </div>
        <div style="clear:both;"></div>
    </div>
    <div id="pickPlatformDisableDiv" hidden class="yellowNote">
        <p><strong>@Model.Note: </strong> @Model.CanNotChangePlatformMessage</p>
    </div>
</div>

<div class="card-question" id="SetupPlatform" style="display:none">
    <div id="ShowDocumentationDiv">
    </div>
</div>

<div class="card" id="register-app" name="4. Setup & Register" isblocking="true">
    <div class="ms-Grid-row">
        <div id="app-reg-title"></div>      
        <div id="app-reg-desc"class="ms-Grid-col ms-u-sm12"></div>
    </div>
    <div id="app-reg-notes" class="yellowNote"></div>
    <div class="col-sm-2" style="padding:0">
        <button class="button responsive-btn" value="let's go'" id="go-reg-app">
            @Model.LetsGo&nbsp;&nbsp;
            <span class="icon_seemore"></span>
        </button>
    </div>
</div>

<div class="card-question" id="registration-successful" style="display:none">
    <div class=""><h1>@Model.RegistrationSuccess</h1></div>
    <div id="app-info-box">
        <p id="registeredText">@Model.RegistrationThanks</p>
        <br />
        <div id="registered-form">
            <form role="form">
                <div class="form-group" id="appIdFieldGroup">
                    <label id="appIdLabel" title="The auto-generated app ID.">App ID <i class="fa fa-question-circle"></i> :</label> @*TODO add label to registerApp.js*@
                    <input readonly id="appIdField" class="form-control" type="text" name="appId" value="FILLER" /> @*TODO: dynamically add value = app id from querystring*@
                </div>
                <div class="form-group" id="redirectUriFieldGroup">
                    <label id="redirectUriLabel" class="" title="The URI to which we will redirect in response to an OAuth 2.0 request." for="redirectUri">Redirect URI <i class="fa fa-question-circle"></i> :</label>
                    <input readonly id="redirectUriField" class="form-control" type="text" name="redirectUri" value="FILLER2" /> @*TODO: add redirect from querystring. was value="@Model.redirectUri" *@
                    <div id="redirect-uri-error-div" class="ms-font-color-error ms-font-l"></div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card" id="setup-project" name="5. Code">
    <div class=""><h1>Start coding</h1></div>
    <div id="use-starter-project">
        <p id="downloadText">@Model.DownloadCodeSample</p>
        <br />

        <div id="registration-form">
            <form role="form">
                <div id="app-secret-prompt">
                    <p>@Model.EnterAppSecret</p>
                    <div class="form-group" id="appPasswordFieldGroup">
                        @*<label id="appPasswordLabel" class="" title="The password associated with the App ID." for="appPassword">App Password <i class="fa fa-question-circle"></i> :</label>*@
                        <input id="appPasswordField" class="form-control" type="text" name="appId" placeholder="<App Secret Here>" />
                        <div id="redirect-uri-error-div" class="ms-font-color-error ms-font-l"></div>
                    </div>
                </div>
                <button class="download-button" type="button" value="Download starter project" id="downloadCodeSampleButtonSdk" onclick="registerAppParams.clientSecret = $('#appPasswordField').val(); codeSamplePackageAndDownload(getPlatformInfo(platformId).SDKCodeSample.Repo, registerAppParams.clientId, registerAppParams.clientSecret, registerAppParams.redirectUri, registerAppParams.signonUri, true); setAllSetDiv();">
                    @Model.DownloadSdkCodeSample&nbsp;&nbsp;
                    @*<img class="img-white-foreground" src=@Microsoft.Web.Portal.Common.Environment.GetMediaUrl("/media/Default/GettingStarted/devOffice_getting_started_downloadarrow_22x22.png") alt="download" />*@
                </button>
                <button class="download-button" type="button" value="Download starter project" id="downloadCodeSampleButtonRest" onclick="registerAppParams.clientSecret = $('#appPasswordField').val(); codeSamplePackageAndDownload(getPlatformInfo(platformId).RestCodeSample.Repo, registerAppParams.clientId, registerAppParams.clientSecret, registerAppParams.redirectUri, registerAppParams.signonUri, false); setAllSetDiv();">
                    @Model.DownloadRestCodeSample&nbsp;&nbsp;
                    @*<img class="img-white-foreground" src=@Microsoft.Web.Portal.Common.Environment.GetMediaUrl("/media/Default/GettingStarted/devOffice_getting_started_downloadarrow_22x22.png") alt="download" />*@
                </button>
            </form>
        </div>



    </div>
    <div id="write-code-from-scratch" hidden></div>
    <div id="suggestionlistId" hidden></div>
    <div id="post-download-instructions" hidden class="note"></div>
</div>

<div class="card" id="next-step" name="6. More resources">
    <h1>More Resources</h1>
    <div>
        <button class="resourceOption col-xs-12 col-sm-4 col-md-4" onclick="window.open('http://graph.microsoft.io/docs');">
            <img class="img-responsive imgGS imgSelectApp" src=@Microsoft.Web.Portal.Common.RunTimeEnvironment.GetMediaUrl("/media/Default/GettingStarted/devOffice_getting_started_reference_70x56.png") alt="Microsoft Graph Documenation" />
            <h4>Microsoft Graph Documentation</h4>
        </button>
        <button class="resourceOption col-xs-12 col-sm-4 col-md-4" onclick="window.open('http://graph.microsoft.io/code-samples-and-sdks');">
            <img class="img-responsive imgGS imgSelectApp" src=@Microsoft.Web.Portal.Common.RunTimeEnvironment.GetMediaUrl("/media/Default/GettingStarted/devOffice_getting_started_morecodesamples_56x56.png") alt="code samples" />
            <h4>Code samples</h4>
        </button>
        <button class="resourceOption col-xs-12 col-sm-4 col-md-4" onclick="window.open('https://apps.dev.microsoft.com/');">
            <img class="img-responsive imgGS imgSelectApp" src=@Microsoft.Web.Portal.Common.RunTimeEnvironment.GetMediaUrl("/media/Default/GettingStarted/devOffice_getting_started_azure_74x52.png") alt="Microsoft Application Registration Portal" />
            <h4>App Registration</h4>
        </button>
        <div style="clear:both;"></div>
    </div>
</div>